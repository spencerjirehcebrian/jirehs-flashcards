{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Jireh's Flashcards",
  "version": "0.0.1",
  "identifier": "com.jirehs-flashcards.app",
  "build": {
    "beforeDevCommand": "pnpm --filter @jirehs-flashcards/frontend dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm --filter @jirehs-flashcards/frontend build",
    "frontendDist": "../../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Jireh's Flashcards",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  }
}
